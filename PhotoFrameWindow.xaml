<Window x:Class="PhotoFrame.PhotoFrameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent"
        Topmost="False"
        ShowInTaskbar="False"
        ResizeMode="CanResizeWithGrip"
        Width="400" Height="300"
        Loaded="Window_Loaded"
        SizeChanged="Window_SizeChanged">
  <Grid>
    <!-- Outer ambient glow -->
    <Border x:Name="AmbientBorder" Background="#40FFFFFF" CornerRadius="6" Margin="8">
      <!-- Inner frame -->
      <Border x:Name="FrameBorder" Background="#CCFFFFFF" CornerRadius="4" Margin="6" Padding="4">
        <Image x:Name="PhotoImage" Stretch="Uniform" />
      </Border>
    </Border>
  </Grid>
</Window>
